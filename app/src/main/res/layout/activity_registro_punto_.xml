<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    tools:context=".RegistroPunto_Activity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="733dp"
        android:gravity="start"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="150dp"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="Registro Ubicacion"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNombrePunto"
            android:layout_width="295dp"
            android:layout_height="42dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#2196F3"
            android:ems="10"
            android:hint="Nombre del punto"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#6C6C6E" />

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="295dp"
            android:layout_height="42dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#2196F3"
            android:ems="10"
            android:hint="Descripcion del punto"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#6C6C6E" />

        <Spinner
            android:id="@+id/spnColor"
            android:layout_width="295dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:background="#6A6A6A" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_redondo_azul"
            android:onClick="registrar"
            android:text="guardar" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_redondo_azul"
            android:onClick="editar"
            android:text="Editar"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_redondo_azul"
            android:onClick="eliminar"
            android:text="Eliminar"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>